<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA"
    android:id="@+id/main"
    tools:ignore="ExtraText">

    android:contentDescription=&quot;@string/retour&quot;
    android:background=&quot;@android:color/transparent&quot; /&gt;

    android:contentDescription=&quot;@string/fermer&quot;
    android:background=&quot;@android:color/transparent&quot;
    android:layout_alignParentEnd=&quot;true&quot; /&gt;





    <ImageView
        android:id="@+id/backButton6"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/goback"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bouton_retour"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Champ de recherche -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retour"
        android:layout_marginTop="53dp"
        android:text="@string/ville_depart"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#6AFB9F18"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/searchIcon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/recherche"
            android:src="?android:attr/actionModeWebSearchDrawable" />

        <EditText
            android:id="@+id/searchField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:hint="@string/ville_de_depart_hint"
            android:inputType="text|textAutoComplete"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#1F1E1E"
            android:textColorHint="#795548"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </LinearLayout>



    <!-- Sous-titre -->
    <TextView
        android:id="@+id/suggestedCities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/villes_suggerees"
        android:textSize="16sp"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="24dp" />

    <!-- Liste des villes -->
    <LinearLayout
        android:id="@+id/citiesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestedCities"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Une ville : Casablanca -->
        <LinearLayout
            android:id="@+id/casablanca1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/localisation"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/casablanca"
                android:textColor="#121111"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chevron"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Fes -->
        <LinearLayout
            android:id="@+id/Fes1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/localisation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/fes"
                android:textColor="#070707"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chevron"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- SalÃ© -->
        <LinearLayout
            android:id="@+id/Sale1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/localisation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/sale"
                android:textColor="#121010"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chevron"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Tanger -->
        <LinearLayout
            android:id="@+id/Tanger1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/localisation"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/tanger"
                android:textColor="#070606"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chevron"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>