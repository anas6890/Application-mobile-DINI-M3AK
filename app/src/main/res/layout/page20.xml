<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Titre -->

    <!-- Onglets RESERVATIONS / OFFRES -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="Mes covoiturages"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/card"
        android:layout_width="390dp"
        android:layout_height="427dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabs">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="418dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="346dp"
                android:layout_height="338dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:src="@drawable/naima"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="123dp"
                android:layout_height="41dp"
                android:backgroundTint="#FBFBFB"
                android:text="accepter"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="212dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/resource_false"
                tools:layout_editor_absoluteX="172dp"
                tools:layout_editor_absoluteY="211dp" />

            <Button
                android:layout_width="117dp"
                android:layout_height="42dp"
                android:backgroundTint="#FDFDFD"
                android:text="refuser"
                tools:layout_editor_absoluteX="219dp"
                tools:layout_editor_absoluteY="213dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:src="@drawable/resource_true"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="212dp" />

            <Button
                android:layout_width="211dp"
                android:layout_height="52dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FDECCF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="RESERVATIONS"
                android:textColor="#050505"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:layout_width="152dp"
                android:layout_height="54dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#E2DED9"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="OFFRES"
                android:textColor="#050505"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="-1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="436dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="    passager"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="conducteur"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="covoiturage"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wallet"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:background="@drawable/go_back_button"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="-5dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#A09E9E"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="748dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:src="@drawable/passager"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="763dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/conducteur"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="765dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covoiturage"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="767dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wallet"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="771dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
